<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============== ToolBarView ============== -->
    <declare-styleable name="ToolBarView">
        <attr name="toolbar_mode" format="enum">
            <enum name="Title" value="0"/>
            <enum name="Search" value="1"/>
        </attr>
        <attr name="toolbar_title" format="string"/>
        <attr name="toolbar_title_color" format="color"/>
        <attr name="toolbar_title_size" format="dimension"/>
        <attr name="toolbar_hint" format="string"/>
        <attr name="toolbar_rtext" format="string"/>
        <attr name="toolbar_rtext_color" format="color"/>
        <attr name="toolbar_rtext_size" format="dimension"/>
        <attr name="toolbar_rimage" format="reference"/>
        <attr name="toolbar_return_image" format="reference"/>
        <attr name="toolbar_search_editable" format="boolean"/>
        <attr name="toolbar_search_maxLength" format="integer"/>
        <attr name="toolbar_have_return" format="boolean"/>
        <attr name="toolbar_have_voice" format="boolean"/>
        <attr name="toolbar_background_color" format="color"/>
    </declare-styleable>

    <!-- ============== NumberProgressBar ============== -->
    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" format="integer"/>

        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>

        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>

        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>

        <attr name="progress_text_offset" format="dimension"/>

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference"/>
    </declare-styleable>

    <!-- ============== IndexBar ============== -->
    <declare-styleable name="IndexBarView">
        <attr name="index_text_size_normal" format="dimension"/>
        <attr name="index_text_color_normal" format="color"/>
        <attr name="index_text_size_pressed" format="dimension"/>
        <attr name="index_text_color_pressed" format="color"/>
        <!-- 此值只对 layout_height="wrap_content" 时有效果 -->
        <attr name="index_text_space" format="dimension"/>
    </declare-styleable>

    <!-- ============== CheckButton ============== -->
    <declare-styleable name="CheckButton">
        <attr name="check_checkable" format="boolean"/>
        <attr name="check_check" format="boolean"/>
    </declare-styleable>

    <!-- ============== TagButtonView ============== -->
    <declare-styleable name="TagButtonView">
        <attr name="tag_span_count" format="integer"/>
        <attr name="tag_interval" format="dimension"/>
        <attr name="tag_single" format="boolean"/>
        <attr name="tag_cancelable" format="boolean"/>
    </declare-styleable>

    <!-- ============== YearMonthDayView ============== -->
    <declare-styleable name="YearMonthDayView">
        <attr name="year_style" format="integer"/>
        <attr name="year_mode" format="flags">
            <flag name="year" value="1"/>
            <flag name="month" value="2"/>
            <flag name="day" value="4"/>
            <flag name="hour" value="8"/>
            <flag name="minute" value="16"/>
            <flag name="second" value="32"/>
        </attr>
    </declare-styleable>

    <!-- ============== EditWordView ============== -->
    <declare-styleable name="EditWordView">
        <attr name="edit_mode" format="enum">
            <enum name="Normal" value="0"/>
            <enum name="Rect" value="1"/>
            <enum name="Line" value="2"/>
        </attr>
        <attr name="edit_word_length" format="integer"/>
        <attr name="edit_word_space" format="dimension"/>
        <attr name="edit_word_width" format="dimension"/>
        <attr name="edit_cursor_show" format="boolean"/>
        <attr name="edit_background" format="reference"/>
        <attr name="edit_cursor" format="reference"/>
    </declare-styleable>
</resources>